{
	"name": "twp",
	"displayName": "Teamwork Projects",
	"description": "The Teamwork Projects and Visual Studio Code Editor extension allows you to manage your projects and tasks directly from within Visual Studio Code so you can get more work done from one place. ",
	"publisher": "teamwork",
	"homepage": "https://www.teamwork.com",
	"bugs": {
		"url": "https://github.com/teamwork/vscode-projects/issues",
		"email": "integrations@teamwork.com"
	},
	"icon": "resources/projects.png",
	"repository": {
		"type": "Github",
		"url": "https://github.com/Teamwork/vscode-projects"
	},
	"badges": [
		{
			"description": "Build Status",
			"href": "https://badgen.net/badge/Build/OK/green?icon=github",
			"url": "https://github.com/Teamwork/vscode-projects"
		},
		{
			"description": "Come and visit us!",
			"href": "https://badgen.net/badge/visit/us/green?icon=twitter",
			"url": "https://twitter.com/Teamwork"
		}
	],
	"version": "1.0.16",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Extension Packs",
		"Other"
	],
	"activationEvents": [
		"*",
		"onView:taskOutline"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"type": "object",
				"title": "Teamwork Projects Configuration",
				"properties": {
					"twp.OnlySelfAssigned": {
						"default": false,
						"type": "boolean",
						"description": "Only show tasks assigned to you."
					},
					"twp.showUnAssigned": {
						"default": true,
						"type": "boolean",
						"description": "Show tasks not assigned to anyone"
					},
					"twp.ShowTeamworkPanel": {
						"default": false,
						"type": "boolean",
						"description": "Show native teamwork panel (false: uses adaptive card )"
					},
					"twp.ShowGitInfo": {
						"default": true,
						"type": "boolean",
						"description": "Add git information to newly created tasks"
					},
					"twp.enabletimeTracking": {
						"default": true,
						"type": "boolean",
						"description": "Show your logged time on a task and enable logging time"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "twp_Outline",
					"title": "Teamwork Projects",
					"icon": "resources/projects-white.svg"
				}
			]
		},
		"views": {
			"twp_Outline": [
				{
					"id": "taskOutline",
					"name": "Teamwork Projects"
				}
			]
		},
		"commands": [
			{
				"command": "twp.completeTask",
				"title": "Complete Task",
				"icon": {
					"light": "resources/task.svg",
					"dark": "resources/task.svg"
				}
			},
			{
				"command": "taskOutline.executeTask",
				"title": "Execute"
			},
			{
				"command": "taskOutline.showElement",
				"title": "Show"
			},
			{
				"command": "taskOutline.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "twp.SetAccount",
				"title": "Account",
				"icon": {
					"light": "resources/light/user.svg",
					"dark": "resources/dark/user.svg"
				}
			},
			{
				"command": "twp.SetProject",
				"title": "Select Project for Repository",
				"icon": {
					"light": "resources/projects-white.svg",
					"dark": "resources/projects-white.svg"
				}
			},
			{
				"command": "twp.SetActiveProject",
				"title": "Select the Active Project for Repository"
			},
			{
				"command": "twp.RefreshData",
				"title": "Refresh all Project Data"
			},
			{
				"command": "twp.editTaskFilter",
				"title": "Filter",
				"icon": {
					"light": "resources/icons/filter_light.svg",
					"dark": "resources/icons/filter_dark.svg"
				}
			},
			{
				"command": "twp.clearTaskFilter",
				"title": "Clear Filter",
				"icon": {
					"light": "resources/icons/clear_filter_light.svg",
					"dark": "resources/icons/clear_filter_dark.svg"
				}
			},
			{
				"command": "twp.linkTask",
				"title": "Create Task",
				"icon": {
					"light": "resources/icons/clear_filter_light.svg",
					"dark": "resources/icons/clear_filter_dark.svg"
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "twp.linkTask",
					"group": "twpGroup"
				}
			],
			"view/item/context": [
				{
					"command": "twp.completeTask",
					"when": "viewItem == taskItem ",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "taskOutline.refresh",
					"when": "view == taskOutline",
					"group": "navigation"
				},
				{
					"command": "twp.SetProject",
					"when": "view == taskOutline",
					"group": "navigation"
				},
				{
					"command": "twp.SetAccount",
					"when": "view == taskOutline",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"@types/rimraf": "^2.0.2"
	},
	"dependencies": {
		"adaptivecards-templating": "0.1.0-alpha.1",
		"axios": "^0.18.1",
		"cryptiles": ">=4.1.2",
		"dateformat": "^3.0.3",
		"ftp": "^0.3.10",
		"hoek": ">=4.2.1",
		"jsonc-parser": "^0.4.2",
		"mkdirp": "^0.5.1",
		"moment": "^2.24.0",
		"request": "^2.88.0",
		"rimraf": "^2.6.2",
		"turndown": "^5.0.3",
		"vsce": "^1.59.0"
	}
}
